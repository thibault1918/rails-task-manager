<div class="container">
  <h1>Edit Task</h1>
  <%= form_with model: @task do |f| %>
    <%= f.label :title, {:class => "form-label"} %>
    <%= f.text_field :title, {:class => "form-control mb-3"} %>
    <%= f.label :details, {:class => "form-label"} %>
    <%= f.text_area :details, {:class => "form-control mb-3"} %>
    <%= f.check_box :completed, {}, true, false %>
    <%= f.label "Completed?", {:class => "form-label"} %>
    <br>
    <%= f.submit :class => "btn btn-primary my-3" %>
  <% end %>
  <%= link_to tasks_path, :class => "text-decoration-none" do %>
    <i class="fa-solid fa-rotate-left"></i>
    Back to list
  <% end %>
</div>
